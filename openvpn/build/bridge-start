#!/bin/bash

#################################
# Set up Ethernet bridge on Linux
# Requires: bridge-utils
#################################

# Define Bridge Interface
br="br0"

# Define list of TAP interfaces to be bridged,
# for example tap="tap0 tap1 tap2".
tap="tap0"

# Figure out which  physical ethernet interface to bridge
# with TAP interface(s) above.
eth=$(ifconfig | grep -B 1 $BRIDGED_IP | sed 's/\s.*//')
eth_ip="$BRIDGED_IP"
eth_netmask=$(ifconfig | grep $BRIDGED_IP | sed 's/.*Mask:\(\S\+\).*/\1/')

mkdir /dev/net/
mknod /dev/net/tun c 10 200

for t in $tap; do
    openvpn --mktun --dev $t
done

brctl addbr $br
brctl addif $br $eth

for t in $tap; do
    brctl addif $br $t
done

for t in $tap; do
    ifconfig $t 0.0.0.0 promisc up
done

ifconfig $eth 0.0.0.0 promisc up

ifconfig $br $eth_ip netmask $eth_netmask

exec ovpn_run
